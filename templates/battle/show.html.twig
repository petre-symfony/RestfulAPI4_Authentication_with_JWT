{% extends 'base.html.twig' %}

{% block content %}
  <h1 class="battle-result">Battle:</h1>
  <p class="results">{{ battle.programmer.nickname }} vs. {{ battle.project.name }}</p>

  <h3 id="winner">Winner: {{ battle.didProgrammerWin ? battle.programmer.nickname : battle.project.name }}</h3>

  <div id="battle-notes">
		{{ battle.notes }}
  </div>

	{% if battle.programmer.user == app.user %}
    <div style="margin-top: 20px;">
      <hr>
      <div class="battle-btns">
        <a class="btn btn-small btn-start-battle" href="{{ path('programmer_show', {'nickname': battle.programmer.nickname}) }}">Fight again</a>
        <a class="btn btn-small btn-surrender" href="{{ path('homepage') }}">Retreat!</a>
      </div>
    </div>
	{% endif %}
{% endblock %}
